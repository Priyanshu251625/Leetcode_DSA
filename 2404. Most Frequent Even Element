class Solution {
    public int mostFrequentEven(int[] nums) {
        int freq_num=-1,max_freq=0;
        HashMap<Integer,Integer> freq=new HashMap<>();
        int n=nums.length;
        for(int i=0;i<n;i++){
            if(nums[i]%2==0){
                if(freq.containsKey(nums[i])){
                    freq.put(nums[i],freq.get(nums[i])+1);
                }
                else{
                    freq.put(nums[i],1);
                }
            }
        }
        for(Map.Entry<Integer,Integer>e:freq.entrySet()){
            if(e.getValue()>max_freq){
                max_freq=e.getValue();
                freq_num=e.getKey();
            }
            else if(e.getValue()==max_freq){
                if(e.getKey()<freq_num){
                    freq_num=e.getKey();
                }
            }
        }
        return freq_num;
    }
}
