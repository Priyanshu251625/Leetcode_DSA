class Solution {
    public int minSubArrayLen(int target, int[] nums) {
        int n=nums.length;
        int left=0,right=-1;
        int sum=0;
        int length=Integer.MAX_VALUE;
        while(right<n){
            while(left<=right && sum>=target){
                length=Math.min(length,right-left+1);
                sum-=nums[left];
                left++;
            }
            right++;
            if(right<n){
                sum+=nums[right];
            }
        }
        if(length==Integer.MAX_VALUE){
            return 0;
        }
        return length;
    }
}
