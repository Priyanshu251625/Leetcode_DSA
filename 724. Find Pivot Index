class Solution {
    public int pivotIndex(int[] nums) {
        int n=nums.length;
        int i=0;
        int sum_left=0;
        int sum_right=0;
        for(int j=1;j<n;j++){
            sum_right+=nums[j];
        }
        if(sum_left==sum_right){
            return i;
        }
        while(i<n-1){
            sum_left+=nums[i];
            i++;
            sum_right-=nums[i];
            if(sum_left==sum_right){
                return i;
            }
        }
        return -1;
    }
}
